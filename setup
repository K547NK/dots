#!/bin/sh
sudo pw user mod nigel -G wheel || sudo pw user mod nigel -G video
#install both display manager and server also add window manager and compositor
sudo pkg install drm-kmod i3-gaps sddm compton feh xorg scrot polybar i3lock neofetch lynx vim feh zsh rofi ImageMagick7 py38-ranger firefox
#home directory basics
cd ~/
mkdir .config .local .cache .homepage Documents Pictures Downloads Code
cd ..
#fonts
mkdir -p ~/.local/share/fonts
#housecleaning
sudo sysrc sddm_enable=YES
sudo sysrc dbus_enable=YES
sudo sysrc kld_list="/boot/modules/i915kms.ko cuse"
sudo sysrc webcam_enable=YES

#more home directroy nonsense
cp -r .config/* ~/.config/
cp -r .local/* ~/.local/
cp .Xresources .vimrc ~/
#oh-my-zsh eye candy for zsh
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

